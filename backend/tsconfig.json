{
  "compilerOptions": {
    "target": "es2016",
    "module": "nodenext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@utils": [
        "./src/lib/utils"
      ],
      "@config/*": [
        "./config/*"
      ],
      "@/*": [
        "./src/*"
      ]
    },
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "ts-node": {
    // Do not forget to `npm i -D tsconfig-paths`
    "require": ["tsconfig-paths/register"]
  }
}